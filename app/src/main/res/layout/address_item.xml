<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    android:background="@drawable/head_rim"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/address_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="庄先生"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:text="13812345678"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/details_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"

        android:padding="5dp"
        android:text="深圳市宝安区不知道路不知道多少号"
        android:textColor="@color/inactive_bottom_navigation" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/zircon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/address_default_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@drawable/address_selected"
            android:padding="10dp"
            android:text="@string/address_default"
            android:textColor="@color/inactive_bottom_navigation" />

        <TextView
            android:id="@+id/address_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_toStartOf="@+id/address_delete_tv"
            android:drawableLeft="@drawable/bianji_gray_icon"
            android:drawablePadding="5dp"
            android:padding="10dp"

            android:text="@string/address_edit" />

        <TextView
            android:id="@+id/address_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:drawableLeft="@drawable/trash_gray_icon"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="@string/address_delete" />
    </RelativeLayout>
</LinearLayout>